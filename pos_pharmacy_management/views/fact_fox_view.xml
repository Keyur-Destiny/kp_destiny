<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fact_box_tree" model="ir.ui.view">
        <field name="name">fact.box.tree</field>
        <field name="model">fact.box</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>

        </field>
    </record>

    <record id="view_fact_box_form" model="ir.ui.view">
        <field name="name">fact.box.form</field>
        <field name="model">fact.box</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>