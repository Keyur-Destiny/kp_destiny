<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_action_class_tree" model="ir.ui.view">
        <field name="name">action.class.tree</field>
        <field name="model">action.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>

        </field>
    </record>

    <record id="view_action_class_form" model="ir.ui.view">
        <field name="name">action.class.form</field>
        <field name="model">action.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>