<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_basic_salt_tree" model="ir.ui.view">
        <field name="name">basic.salt.tree</field>
        <field name="model">basic.salt</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>

        </field>
    </record>

    <record id="view_basic_salt_form" model="ir.ui.view">
        <field name="name">basic.salt.form</field>
        <field name="model">basic.salt</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>