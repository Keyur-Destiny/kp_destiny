<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_medicine_usage_tree" model="ir.ui.view">
        <field name="name">medicine.usage.tree</field>
        <field name="model">medicine.usage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>

        </field>
    </record>

    <record id="view_medicine_usage_form" model="ir.ui.view">
        <field name="name">medicine.usage.form</field>
        <field name="model">medicine.usage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>