                        <field name="is_pos_advance_search"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_pos_advance_search"/>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_storage_show"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_storage_show"/>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_medicine_use"/>
                    </div>
                    <div class="o_setting_right_pane">
