                    <div class="o_setting_right_pane">
                        <label for="is_side_effect"/>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_safety_advice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_safety_advice"/>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_show_medicine_info"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_show_medicine_info"/>
                    </div>
                </div>

