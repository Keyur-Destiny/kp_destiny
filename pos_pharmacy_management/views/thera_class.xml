<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_thera_class_tree" model="ir.ui.view">
        <field name="name">thera.class.tree</field>
        <field name="model">thera.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>

        </field>
    </record>

    <record id="view_thera_class_form" model="ir.ui.view">
        <field name="name">thera.class.form</field>
        <field name="model">thera.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>