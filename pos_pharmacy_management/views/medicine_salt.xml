<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_medicine_salt_tree" model="ir.ui.view">
        <field name="name">medicine.salt.tree</field>
        <field name="model">medicine.salt</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="basic_salt_id"/>
                <field name="quantity"/>
                <field name="salt_unit_id"/>
            </tree>

        </field>
    </record>

    <record id="view_medicine_salt_form" model="ir.ui.view">
        <field name="name">medicine.salt.form</field>
        <field name="model">medicine.salt</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="basic_salt_id"/>
                        <field name="quantity"/>
                        <field name="salt_unit_id"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>