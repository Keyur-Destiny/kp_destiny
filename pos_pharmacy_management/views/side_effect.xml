<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_medicine_side_effect_tree" model="ir.ui.view">
        <field name="name">medicine.side.effect.tree</field>
        <field name="model">medicine.side.effect</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="side_effect"/>
            </tree>

        </field>
    </record>

    <record id="view_medicine_side_effect_form" model="ir.ui.view">
        <field name="name">medicine.side.effect.form</field>
        <field name="model">medicine.side.effect</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="side_effect"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>