<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_salt_unit_tree" model="ir.ui.view">
        <field name="name">salt.unit.tree</field>
        <field name="model">salt.unit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>

        </field>
    </record>

    <record id="view_salt_unit_form" model="ir.ui.view">
        <field name="name">salt.unit.form</field>
        <field name="model">salt.unit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>