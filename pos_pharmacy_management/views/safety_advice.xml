<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_medicine_safety_advice_tree" model="ir.ui.view">
        <field name="name">medicine.safety.advice.tree</field>
        <field name="model">medicine.safety.advice</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="safety_advice"/>
            </tree>

        </field>
    </record>

    <record id="view_medicine_safety_advice_form" model="ir.ui.view">
        <field name="name">medicine.safety.advice.form</field>
        <field name="model">medicine.safety.advice</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="safety_advice"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>